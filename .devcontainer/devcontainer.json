{
  "name": "Smart Traffic Monitor",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  
  "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt && mkdir -p uploads",
  
  "forwardPorts": [5000],
  
  "portsAttributes": {
    "5000": {
      "label": "Traffic Monitor App",
      "onAutoForward": "openBrowser"
    }
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}
